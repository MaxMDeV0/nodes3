extends ./login-layout

block content
    .row.align-items-center(style ="height: calc(100vh - 50px);")

        section.p-5.w-100
            .row
                .col-12
                    .card.text-black 
                        .card-body.p-md-5 
                            .row.justify-content-center 
                                .col-md-10.col-lg-6.col-xl-5.order-2.order-lg-1
                                    p.text-center.text-body.h1.fw-bold.mb-5.mt-4 Log in

                                    form(method="post")
                                        .d-flex.flex-row.align-items-center.mb-4
                                            i.fas.text-body.fa-envelope.fa-lg.me-3.fa-fw
                                            .form-outline.flex-fill.mb-0(data-mdb-input-init="", data-mdb-input-initialized="true")
                                                input#form3Example3c.form-control(type="email", autocompleted="" name="email")
                                                label.form-label(for="form3Example3c", style="margin-left: 0px;") Your Email
                                                .form-notch
                                                    .form-notch-leading(style="width: 9px;")
                                                    .form-notch-middle(style="width: 68.8px;")
                                                    .form-notch-trailing

                                        .d-flex.flex-row.align-items-center.mb-4
                                            i.fas.text-body.fa-lock.fa-lg.me-3.fa-fw
                                            .form-outline.flex-fill.mb-0(data-mdb-input-init="", data-mdb-input-initialized="true" )
                                                input#form3Example4c.form-control(type="password" autocompleted="" name="password")
                                                label.form-label(for="form3Example4c", style="margin-left: 0px;") Password
                                                .form-notch
                                                    .form-notch-leading(style="width: 9px;")
                                                    .form-notch-middle(style="width: 64.8px;")
                                                    .form-notch-trailing

                                        .d-flex.justify-content-center.mx-4.mb-3.mb-lg-4
                                            button.btn.btn-primary.btn-lg(type="submit", data-mdb-button-init="", data-mdb-ripple-init="", data-mdb-button-initialized="true") Log in

                                .col-md-10.col-lg-6.col-xl-7.d-flex.align-items-center.order-1.order-lg-2
                                    img.img-fluid(src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" alt="Sample image")
